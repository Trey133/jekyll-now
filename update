#!/usr/bin/env python
import subprocess
import os
import time
from datetime import datetime
now = str(datetime.now())
def clear():
    subprocess.call(["clear"])
while True:
    clear()
    print "Updating Website..."
    subprocess.Popen(["git", "add", "-A"], stdout=subprocess.PIPE)
    subprocess.Popen(["git", "commit", "-m", "Update"], stdout=subprocess.PIPE)
    subprocess.Popen(["git", "push", "origin"], stdout=subprocess.PIPE)
    os.system("jekyll build -q")
    clear()
    print "\n\nWebsite Last Updated At: %s" % now
    time.sleep(30)
